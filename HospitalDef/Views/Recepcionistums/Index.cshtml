@model HospitalDef.Models.Recepcionistum

@{
    ViewData["Title"] = "Perfil de Recepcionista";
}

<link rel="stylesheet" href="~/css/doctorIndex.css" />

<div class="dashboard-container">

    <!-- SIDEBAR -->
    <div class="sidebar">
        <h2 class="menu-title">Menú</h2>

        <a class="menu-btn" asp-controller="Usuarios" asp-action="CreateUsuario">
            Crear Usuario
        </a>

        <a class="menu-btn" asp-controller="vistaDoctores" asp-action="Index">
            Visualizar Doctores
        </a>

       <!--<a class="menu-btn" asp-controller="Empleadoes" asp-action="Index">
            Visualizar Empleados
         </a>-->
        <a class="menu-btn" asp-controller="Pacientes" asp-action="ListadoPacientes">
            Visualizar Pacientes
        </a>
       
        <a class="menu-btn" asp-controller="HistorialCitasMedicoPacientes" asp-action="Index">
            Visualizar Bitacora
        </a>
        <a class="menu-btn" asp-controller="Citas" asp-action="Cancelar">
            Visualizar Citas
        </a>

        <a class="menu-btn" asp-controller="Pacientes" asp-action="Index">
            Agendar Cita
        </a>

        <a class="menu-btn" asp-controller="RecetasAtendidas" asp-action="Index">
            Recetas atendidas
        </a>

        <a class="menu-btn" asp-controller="Empleadoes" asp-action="DatosPersonalesRecep">
            Datos personales
        </a>
    </div>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-0 shadow-lg rounded-3 overflow-hidden">

                    <div class="card-header bg-success text-white p-4 d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 fw-bold">
                            <i class="fas fa-id-badge me-2"></i>Ficha Técnica
                        </h4>
                        <span class="badge bg-white text-success">Activo</span>
                    </div>

                    <div class="card-body p-5 bg-light">
                        <div class="text-center mb-5">
                            <div class="bg-white rounded-circle shadow-sm d-inline-flex p-4 mb-3 align-items-center justify-content-center"
                                 style="width: 120px; height: 120px;">
                                <i class="fas fa-user fa-4x text-success"></i>
                            </div>

                            <h2 class="fw-bold text-dark mb-1">
                                @Model.IdEmpleadoNavigation.Nombre
                                @Model.IdEmpleadoNavigation.ApellidoP
                                @Model.IdEmpleadoNavigation.ApellidoM
                            </h2>

                            <div class="mt-2">
                                <span class="badge bg-secondary fs-6 px-4 py-2 rounded-pill shadow-sm">
                                    <i class="fas fa-headset me-2"></i>Recepcionista
                                </span>
                            </div>
                        </div>

                        <hr class="text-muted opacity-25 mb-4">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="p-4 bg-white rounded-3 shadow-sm border-start border-4 border-success h-100">
                                    <h6 class="text-muted fw-bold text-uppercase small">
                                        RFC
                                    </h6>
                                    <p class="fs-5 fw-bold mb-0 text-dark font-monospace">
                                        @Model.IdEmpleadoNavigation.Rfc
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="p-4 bg-white rounded-3 shadow-sm border-start border-4 border-primary h-100">
                                    <h6 class="text-muted fw-bold text-uppercase small">
                                        Horario
                                    </h6>

                                    <p class="mb-1 fw-bold text-dark">
                                        Entrada:
                                        @Model.IdEmpleadoNavigation.IdHorarioNavigation.HoraEntrada
                                    </p>

                                    <p class="mb-1 fw-bold text-dark">
                                        Salida:
                                        @Model.IdEmpleadoNavigation.IdHorarioNavigation.HoraSalida
                                    </p>

                                    <p class="mb-0 text-dark">
                                        Días:
                                        @Model.IdEmpleadoNavigation.IdHorarioNavigation.Dias
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="p-4 bg-white rounded-3 shadow-sm border-start border-4 border-warning h-100">
                                    <h6 class="text-muted fw-bold text-uppercase small">
                                        Dirección
                                    </h6>
                                    <p class="mb-0 text-dark">
                                        @Model.IdEmpleadoNavigation.Calle,
                                        @Model.IdEmpleadoNavigation.Colonia,
                                        @Model.IdEmpleadoNavigation.Municipio,
                                        @Model.IdEmpleadoNavigation.Estado
                                    </p>
                                </div>
                            </div>

                        </div>
                    </div>
                    

                </div>
            </div>
        </div>
    </div>
</div>
