@model HospitalDef.Models.Recepcionistum

@{
    ViewData["Title"] = "Perfil de Recepcionista";
}

<link rel="stylesheet" href="~/css/doctorIndex.css" />

<div class="dashboard-container">

    <!-- SIDEBAR -->
    <div class="sidebar-modern d-flex flex-column flex-shrink-0 p-3 text-white shadow-lg">
        <a href="/" class="d-flex align-items-center mb-4 mb-md-0 me-md-auto text-white text-decoration-none animate__animated animate__fadeInLeft animate__faster">
            <div class="icon-brand bg-white text-primary rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                <i class="bi bi-person-workspace fs-5"></i>
            </div>
            <span class="fs-4 fw-bold">Recepción</span>
        </a>

        <div class="nav flex-column mb-auto gap-1">

            <div class="small text-uppercase text-white-50 fw-bold mt-2 mb-1 ms-2 animate__animated animate__fadeInLeft animate__faster" style="font-size: 0.75rem; animation-delay: 0.1s;">
                Gestión de Usuarios
            </div>

            <a asp-controller="Usuarios" asp-action="CreateUsuario" class="nav-link-custom d-flex align-items-center gap-3 animate__animated animate__fadeInLeft animate__faster" style="animation-delay: 0.15s">
                <i class="bi bi-person-plus-fill fs-5"></i>
                <span>Crear Usuario</span>
            </a>

            <a asp-controller="vistaDoctores" asp-action="Index" class="nav-link-custom d-flex align-items-center gap-3 animate__animated animate__fadeInLeft animate__faster" style="animation-delay: 0.2s">
                <i class="bi bi-person-hearts fs-5"></i>
                <span>Doctores</span>
            </a>

            <a asp-controller="Pacientes" asp-action="ListadoPacientes" class="nav-link-custom d-flex align-items-center gap-3 animate__animated animate__fadeInLeft animate__faster" style="animation-delay: 0.25s">
                <i class="bi bi-people-fill fs-5"></i>
                <span>Pacientes</span>
            </a>

            <div class="small text-uppercase text-white-50 fw-bold mt-3 mb-1 ms-2 animate__animated animate__fadeInLeft animate__faster" style="font-size: 0.75rem; animation-delay: 0.3s;">
                Consultas y Citas
            </div>

            <a asp-controller="Citas" asp-action="Create" class="nav-link-custom d-flex align-items-center gap-3 animate__animated animate__fadeInLeft animate__faster" style="animation-delay: 0.35s">
                <i class="bi bi-calendar-plus-fill fs-5"></i>
                <span>Agendar Cita</span>
            </a>

            <a asp-controller="Citas" asp-action="Cancelar" class="nav-link-custom d-flex align-items-center gap-3 animate__animated animate__fadeInLeft animate__faster" style="animation-delay: 0.4s">
                <i class="bi bi-calendar-week-fill fs-5"></i>
                <span>Visualizar Citas</span>
            </a>

            <a asp-controller="HistorialCitasMedicoPacientes" asp-action="Index" class="nav-link-custom d-flex align-items-center gap-3 animate__animated animate__fadeInLeft animate__faster" style="animation-delay: 0.45s">
                <i class="bi bi-journal-medical fs-5"></i>
                <span>Bitácora</span>
            </a>

            <div class="small text-uppercase text-white-50 fw-bold mt-3 mb-1 ms-2 animate__animated animate__fadeInLeft animate__faster" style="font-size: 0.75rem; animation-delay: 0.5s;">
                Administración
            </div>

            <a asp-controller="RecetasAtendidas" asp-action="Index" class="nav-link-custom d-flex align-items-center gap-3 animate__animated animate__fadeInLeft animate__faster" style="animation-delay: 0.55s">
                <i class="bi bi-file-earmark-medical-fill fs-5"></i>
                <span>Recetas Atendidas</span>
            </a>
            <a asp-controller="Consultorios" asp-action="Index" class="nav-link-custom d-flex align-items-center gap-3 animate__animated animate__fadeInLeft animate__faster" style="animation-delay: 0.15s">
                <i class="bi bi-building"></i>
                <span>Consultorios</span>
            </a>
        </div>

        <div class="mt-4 pt-3 border-top border-white border-opacity-10 animate__animated animate__fadeInLeft animate__faster" style="animation-delay: 0.6s">
            <a asp-controller="Empleadoes" asp-action="DatosPersonalesRecep" class="nav-link-custom d-flex align-items-center gap-3">
                <i class="bi bi-person-vcard fs-5"></i>
                <span>Mis Datos</span>
            </a>
        </div>
    </div>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-0 shadow-lg rounded-3 overflow-hidden">

                    <div class="card-header bg-success text-white p-4 d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 fw-bold">
                            <i class="fas fa-id-badge me-2"></i>Ficha Técnica
                        </h4>
                        <span class="badge bg-white text-success">Activo</span>
                    </div>

                    <div class="card-body p-5 bg-light">
                        <div class="text-center mb-5">
                            <div class="bg-white rounded-circle shadow-sm d-inline-flex p-4 mb-3 align-items-center justify-content-center"
                                 style="width: 120px; height: 120px;">
                                <i class="fas fa-user fa-4x text-success"></i>
                            </div>

                            <h2 class="fw-bold text-dark mb-1">
                                @Model.IdEmpleadoNavigation.Nombre
                                @Model.IdEmpleadoNavigation.ApellidoP
                                @Model.IdEmpleadoNavigation.ApellidoM
                            </h2>

                            <div class="mt-2">
                                <span class="badge bg-secondary fs-6 px-4 py-2 rounded-pill shadow-sm">
                                    <i class="fas fa-headset me-2"></i>Recepcionista
                                </span>
                            </div>
                        </div>

                        <hr class="text-muted opacity-25 mb-4">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="p-4 bg-white rounded-3 shadow-sm border-start border-4 border-success h-100">
                                    <h6 class="text-muted fw-bold text-uppercase small">
                                        RFC
                                    </h6>
                                    <p class="fs-5 fw-bold mb-0 text-dark font-monospace">
                                        @Model.IdEmpleadoNavigation.Rfc
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="p-4 bg-white rounded-3 shadow-sm border-start border-4 border-primary h-100">
                                    <h6 class="text-muted fw-bold text-uppercase small">
                                        Horario
                                    </h6>

                                    <p class="mb-1 fw-bold text-dark">
                                        Entrada:
                                        @Model.IdEmpleadoNavigation.IdHorarioNavigation.HoraEntrada
                                    </p>

                                    <p class="mb-1 fw-bold text-dark">
                                        Salida:
                                        @Model.IdEmpleadoNavigation.IdHorarioNavigation.HoraSalida
                                    </p>

                                    <p class="mb-0 text-dark">
                                        Días:
                                        @Model.IdEmpleadoNavigation.IdHorarioNavigation.Dias
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="p-4 bg-white rounded-3 shadow-sm border-start border-4 border-warning h-100">
                                    <h6 class="text-muted fw-bold text-uppercase small">
                                        Dirección
                                    </h6>
                                    <p class="mb-0 text-dark">
                                        @Model.IdEmpleadoNavigation.Calle,
                                        @Model.IdEmpleadoNavigation.Colonia,
                                        @Model.IdEmpleadoNavigation.Municipio,
                                        @Model.IdEmpleadoNavigation.Estado
                                    </p>
                                </div>
                            </div>

                        </div>
                    </div>
                    

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["Alerta"] != null)
    {
        <script>
            Swal.fire({
                title: 'Información',
                text: '@TempData["Alerta"]',
                icon: 'info',
                confirmButtonText: 'Entendido'
            });
        </script>
    }
    @if (TempData["Alerta Pago"] != null)
    {
        <script>
            Swal.fire({
                title: 'Información',
                text: '@TempData["Alerta Pago"]',
                icon: 'info',
                confirmButtonText: 'Entendido'
            });
        </script>
    }


}
