@model HospitalDef.Models.Medicamento

@{
    ViewData["Title"] = "Nuevo Medicamento";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

<div class="container mt-4">

    <!-- ===== Encabezado ===== -->
    <div class="card shadow-sm mb-4">
        <div class="card-body d-flex align-items-center">
            <i class="bi bi-capsule-pill fs-2 text-primary me-3"></i>
            <div>
                <h3 class="mb-0 fw-bold">Registrar Medicamento</h3>
                <small class="text-muted">Alta de medicamento en inventario</small>
            </div>
        </div>
    </div>

    <!-- ===== Formulario ===== -->
    <div class="card shadow-sm">
        <div class="card-body">

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-3">

                    <div class="col-md-6">
                        <label asp-for="NombreMedicamento" class="form-label fw-semibold"></label>
                        <input asp-for="NombreMedicamento" class="form-control" placeholder="Ej. Paracetamol 500mg" />
                        <span asp-validation-for="NombreMedicamento" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Lote" class="form-label fw-semibold"></label>
                        <input asp-for="Lote" class="form-control" placeholder="Ej. LOTE-2025-01" />
                        <span asp-validation-for="Lote" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Caducidad" class="form-label fw-semibold"></label>
                        <input asp-for="Caducidad" type="date" class="form-control" />
                        <span asp-validation-for="Caducidad" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="PrecioCompra" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="PrecioCompra" class="form-control" />
                        </div>
                        <span asp-validation-for="PrecioCompra" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="PrecioVenta" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="PrecioVenta" class="form-control" />
                        </div>
                        <span asp-validation-for="PrecioVenta" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Ubicacion" class="form-label fw-semibold"></label>
                        <input asp-for="Ubicacion" class="form-control" placeholder="Ej. Estante A / Caja 2" />
                        <span asp-validation-for="Ubicacion" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Stock" class="form-label fw-semibold"></label>
                        <input asp-for="Stock" class="form-control" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>

                </div>

                <!-- ===== Botones ===== -->
                <div class="mt-4 d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>

                    <button type="submit" class="btn btn-primary rounded-pill px-4">
                        <i class="bi bi-save"></i> Guardar medicamento
                    </button>
                </div>

            </form>

        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
