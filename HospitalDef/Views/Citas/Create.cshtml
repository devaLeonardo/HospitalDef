@model HospitalDef.Models.Cita

@{
    ViewData["Title"] = "Agendar";
}

<div class="row justify-content-center my-5">

    <div class="col-lg-6 col-md-8 agendar-form-container">

        <div class="form-header text-center mb-4">
            <h1>Agenda tu cita</h1>
            <h4>Cita</h4>
            <hr />
        </div>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="idPaciente" class="control-label">Paciente: </label>
                <select asp-for="idPaciente" class="form-control" asp-items="ViewBag.IdPaciente"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EspecialidadIdFiltro" class="control-label">Especialidad: </label>
                <select asp-for="EspecialidadIdFiltro" id="ddlEspecialidad" class="form-control" asp-items="@(ViewBag.Especialidades as SelectList)">
                    <option value="">-- Selecciona una Especialidad --</option>
                </select>
                <span asp-validation-for="EspecialidadIdFiltro" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="idDoctor" class="control-label">Doctor:</label>
                <select id="ddlDoctor"
                        asp-for="idDoctor"
                        class="form-control"
                        disabled="disabled">
                    <option value="">-- Selecciona primero una Especialidad --</option>
                </select>
                <span asp-validation-for="idDoctor" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="fechaCita" class="control-label"></label>
                <input asp-for="fechaCita" class="form-control" type="datetime-local" />
                <span asp-validation-for="fechaCita" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end">
                <input type="submit" value="Agendar Cita" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-controller="Pacientes" asp-action="Index" class="btn btn-secondary">Regresar</a>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script>
        $(document).ready(function () {
            $("#ddlEspecialidad").change(function () {

                var especialidadId = $(this).val();

                var ddlDoctor = $("#ddlDoctor");

                ddlDoctor.prop("disabled", true).empty();
                ddlDoctor.append('<option value="">-- Selecciona un Doctor --</option>');

                if (especialidadId && especialidadId > 0) {

                    // Mostrar mensaje de carga mientras se espera la respuesta
                    ddlDoctor.append('<option value="">Cargando Doctores...</option>');

                    // 3. LLAMADA AJAX AL CONTROLADOR
                    $.ajax({
                        url: '/Citas/GetDoctoresPorEspecialidad',
                        type: 'GET',
                        dataType: 'json',
                        data: { IdEspecialidad: especialidadId },

                        // 4. MANEJO DE RESPUESTA EXITOSA
                        success: function (data) {

                            // Limpiar el dropdown de Doctores después de la carga
                            ddlDoctor.empty();

                            if (data.length > 0) {
                                // Agregar el placeholder inicial
                                ddlDoctor.append('<option value="">-- Selecciona un Doctor --</option>');

                                $.each(data, function (index, doctor) {
                                    ddlDoctor.append($('<option/>', {
                                        value: doctor.value,
                                        text: doctor.text
                                    }));
                                });
                                ddlDoctor.prop("disabled", false);

                            } else {
                                ddlDoctor.append('<option value="">No hay Doctores disponibles</option>');
                            }
                        },

                        error: function (xhr, status, error) {
                            console.error("Error en la llamada AJAX: " + error);
                            ddlDoctor.empty().append('<option value="">Error al cargar doctores</option>');
                        }
                    });
                }
            });
        });
    </script>

}


