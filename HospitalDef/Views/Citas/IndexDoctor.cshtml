@model IEnumerable<HospitalDef.Models.Cita>

@{
    ViewData["Title"] = "Mis Citas";
}

@Html.AntiForgeryToken()

<div class="container mt-5">

    <div id="alertaPago" class="alert alert-success alert-dismissible fade show shadow" role="alert" style="display:none; position: fixed; top: 20px; right: 20px; z-index: 1050;">
        <i class="fas fa-check-circle me-2"></i> <span id="mensajePago"></span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary"><i class="fas fa-calendar-alt"></i> Mis Citas</h2>
            <p class="text-muted">Consulta y gestiona las citas que tienes agendadas</p>
        </div>
        
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="ps-4">Fecha Cita</th>
                            <th>Horario</th>
                            <th>Paciente</th>
                            <th>Especialidad</th>
                            <th>Consultorio</th>
                            <th class="text-center">Estatus</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <!-- FECHA -->
                                <td class="ps-4">
                                    <div class="d-flex flex-column">
                                        <span class="fw-bold text-dark">@item.fechaCita.ToShortDateString()</span>
                                        <small class="text-muted">Creada: @item.fechaCreacionCita.ToShortDateString()</small>
                                    </div>
                                </td>

                                <!-- HORARIO -->
                                <td>
                                    <i class="far fa-clock text-primary me-1"></i>
                                    @item.horaInicio - @item.horaTermino
                                </td>

                                <!-- PACIENTE -->
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle p-2 me-2 text-primary">
                                            <i class="fas fa-user-md"></i>
                                        </div>
                                        <div>
                                            <span class="fw-bold d-block">
                                                Paciente: @item.IdPacienteNavigation.Nombre
                                                @item.IdPacienteNavigation.ApellidoP
                                            </span>
                                            
                                        </div>
                                    </div>
                                </td>
                                
                                <!--ESPECIALIDAD-->
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle p-2 me-2 text-primary">
                                            <i class="fas fa-user-md"></i>
                                        </div>
                                        <div>
                                            <span class="fw-bold d-block">
                                                @item.IdDoctorNavigation.IdEspecialidadNavigation.Especialidades
                                            </span>

                                        </div>
                                    </div>
                                </td>


                                <!-- CONSULTORIO -->
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="fw-bold text-primary">
                                            Consultorio @item.IdDoctorNavigation.IdConsultorioNavigation.Numero
                                        </span>
                                        <small class="text-muted">
                                            @item.IdDoctorNavigation.IdConsultorioNavigation.Edificio -
                                            Planta @item.IdDoctorNavigation.IdConsultorioNavigation.Planta
                                        </small>
                                    </div>
                                </td>

                                <!-- ESTATUS -->
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(item.estatusAtencion) && item.estatusAtencion.ToLower().Contains("pagado"))
                                    {
                                        <span class="badge bg-success px-3 py-2">@item.estatusAtencion</span>
                                    }
                                    else if (!string.IsNullOrEmpty(item.estatusAtencion) && item.estatusAtencion.ToLower().Contains("pendiente"))
                                    {
                                        <span class="badge bg-warning text-dark px-3 py-2">@item.estatusAtencion</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary px-3 py-2">@item.estatusAtencion</span>
                                    }
                                </td>

                                <!-- ACCIONES -->
                                <td class="text-center">
                                    <div class="btn-group" role="group">

                                        <a asp-action="Delete" asp-route-id="@item.FolioCitas" class="btn btn-outline-danger btn-sm shadow-sm ms-1" title="Cancelar">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No tienes citas registradas.</h5>
                    <a asp-action="Create" class="btn btn-link">Agendar una ahora</a>
                </div>
            }
        </div>
    </div>

    <div class="mt-4">
        <a asp-controller="Doctors" asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i> Volver a mi modulo
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["Alerta"] != null)
    {
        <script>
            Swal.fire({
                title: 'Información',
                text: '@TempData["Alerta"]',
                icon: 'info',
                confirmButtonText: 'Entendido'
            });
        </script>
    }
   
}
