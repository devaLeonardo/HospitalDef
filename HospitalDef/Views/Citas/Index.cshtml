@model IEnumerable<HospitalDef.Models.Cita>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fechaCreacionCita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaCita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.horaCita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.horaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.horaTermino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estatusAtencion)
            </th>
            <th> Doctor
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fechaCreacionCita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaCita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.horaCita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.horaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.horaTermino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estatusAtencion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdDoctorNavigation.IdDoctor)
            </td>

                <td class="align-middle text-nowrap">
                    <a asp-action="Edit" asp-route-id="@item.FolioCitas" class="btn btn-success btn-sm fw-bold shadow-sm">
                        <i class="fas fa-credit-card me-1"></i> Pagar
                    </a>

                    <a asp-action="Details" asp-route-id="@item.FolioCitas" class="btn btn-outline-secondary btn-sm ms-1" title="Ver detalles">
                        <i class="fas fa-info-circle"></i>
                    </a>

                    <a asp-action="Delete" asp-route-id="@item.FolioCitas" class="btn btn-outline-danger btn-sm ms-1" title="Cancelar Cita">
                        <i class="fas fa-ban"></i>
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>
