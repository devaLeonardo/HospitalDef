@model IEnumerable<HospitalDef.Models.Cita>

@{
    ViewData["Title"] = "Index";
}

<h1>Tus citas</h1>


<p>
    <a asp-action="Create">Agendar Cita</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fechaCreacionCita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechaCita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.horaCita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.horaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.horaTermino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estatusAtencion)
            </th>
            <th> Doctor
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fechaCreacionCita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaCita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.horaCita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.horaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.horaTermino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estatusAtencion)
            </td>
                <td>
                    @($"{item.IdDoctorNavigation.IdEmpleadoNavigation.Nombre} {item.IdDoctorNavigation.IdEmpleadoNavigation.ApellidoP} {item.IdDoctorNavigation.IdEmpleadoNavigation.ApellidoM}")
                    <br />
                    <small class="text-muted">
                        @item.IdDoctorNavigation.IdEspecialidadNavigation.Especialidades
                    </small>
                </td>



                <td class="align-middle text-nowrap">

                    <!-- BOTÓN PAGAR -->
                    <button class="btn btn-success btn-sm fw-bold shadow-sm pagar-btn" data-id="@item.FolioCitas">
                        <i class="fas fa-credit-card me-1"></i> Pagar
                    </button>



                    <a asp-action="Details" asp-route-id="@item.FolioCitas" class="btn btn-outline-secondary btn-sm ms-1" title="Ver detalles">
                        <i class="fas fa-info-circle"></i>
                    </a>

                    <a asp-action="Delete" asp-route-id="@item.FolioCitas" class="btn btn-outline-danger btn-sm ms-1" title="Cancelar Cita">
                        <i class="fas fa-ban"></i>
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>
<div class="text-center mt-3">
    <a asp-controller="Pacientes" asp-action="Index" class="btn btn-secondary">Regresar</a>
</div>
<div id="alertaPago" class="alert alert-success alert-dismissible fade show" role="alert" style="display:none;">
    <span id="mensajePago"></span>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
    $(document).ready(function () {

        $(".pagar-btn").click(function () {

            let folio = $(this).data("id");
            let token = $('input[name="__RequestVerificationToken"]').val();

            $.ajax({
                url: "/Citas/PagarCita",
                type: "POST",
                data: {
                    folio: folio,
                    __RequestVerificationToken: token
                },
                success: function (respuesta) {

                    if (respuesta.ok) {
                        $("#mensajePago").text(respuesta.mensaje);
                        $("#alertaPago").fadeIn();
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        alert(respuesta.mensaje);
                    }
                },
                error: function () {
                    alert("Error al procesar el pago.");
                }
            });

        });

    });
</script>


  
}
