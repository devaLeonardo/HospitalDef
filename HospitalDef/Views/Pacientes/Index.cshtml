

@{
    ViewData["Title"] = "Módulo Paciente";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}


<link rel="stylesheet" href="~/css/doctorIndex.css" />


<div class="dashboard-container">

    <div class="sidebar-modern d-flex flex-column flex-shrink-0 p-3 text-white shadow-lg">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none animate__animated animate__fadeInLeft animate__faster">
            <div class="icon-brand bg-white text-primary rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                <i class="bi bi-person-circle fs-5"></i>
            </div>
            <span class="fs-4 fw-bold">Mi Salud</span>
        </a>

        <hr class="border-white opacity-25">

        <ul class="nav nav-pills flex-column mb-auto gap-2">
            <li class="nav-item animate__animated animate__fadeInLeft animate__faster" style="animation-delay: 0.1s">
                <a asp-controller="Home" asp-action="Index" class="nav-link-custom d-flex align-items-center gap-3">
                    <i class="bi bi-house-door-fill fs-5"></i>
                    <span>Inicio del Módulo</span>
                </a>
            </li>

            <li class="nav-item animate__animated animate__fadeInLeft animate__faster" style="animation-delay: 0.2s">
                <a asp-controller="Citas" asp-action="Create" class="nav-link-custom d-flex align-items-center gap-3">
                    <i class="bi bi-calendar-plus-fill fs-5"></i>
                    <span>Agendar Cita</span>
                </a>
            </li>

            <li class="nav-item animate__animated animate__fadeInLeft animate__faster" style="animation-delay: 0.3s">
                <a asp-controller="Citas" asp-action="Index" class="nav-link-custom d-flex align-items-center gap-3">
                    <i class="bi bi-calendar-event-fill fs-5"></i>
                    <span>Mis Citas</span>
                </a>
            </li>

            <li class="nav-item mt-3 pt-3 border-top border-white border-opacity-10 animate__animated animate__fadeInLeft animate__faster" style="animation-delay: 0.4s">
                <a asp-controller="HistorialMedicoPacientes" asp-action="Details" class="nav-link-custom d-flex align-items-center gap-3">
                    <i class="bi bi-file-earmark-medical-fill fs-5"></i>
                    <span>Historial Médico</span>
                </a>
            </li>
        </ul>

        <div class="mt-auto pt-4 text-center opacity-50 small">
            <p>© 2026 Hospital System</p>
        </div>
    </div>



    <div id="page-content-wrapper" class="flex-grow-1">
        <div class="container-fluid p-4 main-content-area">

            @if (User.Identity.IsAuthenticated)
            {
                var nombre = User.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value;
                
                <div class="alert alert-info shadow-sm" role="alert">
                    <h4 class="alert-heading">¡Hola, @nombre!</h4>
                    <p>Utiliza el menú de la izquierda para **agendar, revisar tus citas o actualizar tus datos personales.**</p>
                </div>
            }

            <h2 class="mt-4">Panel de Control Principal</h2>
            <hr />

            <p class="lead">Bienvenido al área de gestión de pacientes. Selecciona una opción en el menú lateral.</p>

        </div>
    </div>
</div>