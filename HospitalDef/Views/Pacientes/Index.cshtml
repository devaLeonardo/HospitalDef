

@{
    ViewData["Title"] = "Módulo Paciente";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div class="d-flex" id="wrapper">
     
    <div class="border-end bg-dark" id="sidebar-menu">
        <div class="sidebar-heading text-white p-3 border-bottom border-secondary">
            <i class="fas fa-user-injured"></i> Módulo Paciente
        </div>

        <div class="list-group list-group-flush">
            @* Este item se puede poner como "active" si es la página de inicio del módulo *@
            <a class="list-group-item list-group-item-action list-group-item-dark p-3 active" aria-current="true" asp-controller="Home" asp-action="Index">
                <i class="fas fa-home me-2"></i> Inicio del Módulo
            </a>
            <a class="list-group-item list-group-item-action list-group-item-dark p-3" asp-controller="Citas" asp-action="Create">
                <i class="far fa-calendar-plus me-2"></i> Agendar Cita
            </a>
            <a class="list-group-item list-group-item-action list-group-item-dark p-3" asp-controller="Citas" asp-action="Index">
                <i class="fas fa-list-alt me-2"></i> Citas Agendadas
            </a>
            <a class="list-group-item list-group-item-action list-group-item-dark p-3" asp-controller="HistorialMedicoPacientes" asp-action="Details">
                <i class="fas fa-user-circle me-2"></i> Datos Personales
            </a>
        </div>
    </div>
    <div id="page-content-wrapper" class="flex-grow-1">
        <div class="container-fluid p-4 main-content-area">

            @if (User.Identity.IsAuthenticated)
            {
                var nombre = User.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value;
                <div class="alert alert-info shadow-sm" role="alert">
                    <h4 class="alert-heading">¡Hola, @nombre!</h4>
                    <p>Utiliza el menú de la izquierda para **agendar, revisar tus citas o actualizar tus datos personales.**</p>
                </div>
            }

            <h2 class="mt-4">Panel de Control Principal</h2>
            <hr />

            <p class="lead">Bienvenido al área de gestión de pacientes. Selecciona una opción en el menú lateral.</p>

        </div>
    </div>
</div>