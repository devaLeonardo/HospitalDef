@model HospitalDef.Models.HistorialMedicoPaciente

@{
    ViewData["Title"] = "Crear Historial Médico";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow border-0">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0 font-weight-bold">Nuevo Historial Clínico</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <!-- Campo oculto para IdPaciente -->
                        <input type="hidden" asp-for="IdPaciente" value="@ViewBag.IdPaciente" />


                        <!-- Mostrar el paciente asignado  -->
                        <div class="form-group mb-4">
                            <label class="form-label fw-bold">Paciente asignado</label>
                            <input type="text" class="form-control" value="@ViewBag.NombrePaciente" readonly />
                        </div>


                        <hr class="my-4" />

                        <h5 class="text-muted mb-3">Datos Físicos y Biométricos</h5>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Peso" class="form-label">Peso</label>
                                <div class="input-group">
                                    <input asp-for="Peso" class="form-control" placeholder="0.00" />
                                    <span class="input-group-text bg-light">kg</span>
                                </div>
                                <span asp-validation-for="Peso" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Altura" class="form-label">Altura</label>
                                <div class="input-group">
                                    <input asp-for="Altura" class="form-control" placeholder="0.00" />
                                    <span class="input-group-text bg-light">m/cm</span>
                                </div>
                                <span asp-validation-for="Altura" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="TipoSangre" class="form-label">Tipo de Sangre</label>
                                <input asp-for="TipoSangre" class="form-control" placeholder="Ej. O+, A-" />
                                <span asp-validation-for="TipoSangre" class="text-danger"></span>
                            </div>
                        </div>

                        <h5 class="text-muted mb-3 mt-2">Antecedentes Médicos</h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Alergias" class="form-label">Alergias</label>
                                <textarea asp-for="Alergias" class="form-control" rows="3" placeholder="Listar alergias a medicamentos, alimentos, etc."></textarea>
                                <span asp-validation-for="Alergias" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Padecimientos" class="form-label">Padecimientos Crónicos</label>
                                <textarea asp-for="Padecimientos" class="form-control" rows="3" placeholder="Diabetes, Hipertensión, Asma, etc."></textarea>
                                <span asp-validation-for="Padecimientos" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                                <a asp-controller="Pacientes" asp-action="Index" class="btn btn-secondary">Regresar</a>
                            <input type="submit" value="Guardar Historial" class="btn btn-info text-white btn-lg px-5" />
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}