@model IEnumerable<HospitalDef.Models.Servicio>

@{
    ViewData["Title"] = "Servicios Médicos";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

<div class="container-fluid mt-4">

    <!-- ===== HEADER ===== -->
    <div class="card shadow-sm mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <h3 class="fw-bold mb-0">
                    <i class="bi bi-clipboard-pulse text-primary"></i>
                    Servicios Médicos
                </h3>
                <small class="text-muted">Administración de servicios</small>
            </div>

            <a asp-action="Create" class="btn btn-primary rounded-pill">
                <i class="bi bi-plus-circle"></i> Agregar servicio
            </a>
        </div>
    </div>

    <!-- ===== TABLA ===== -->
    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Servicio</th>
                        <th>Precio</th>
                        <th>Horario</th>
                        <th>Estatus</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.NombreServicio</td>
                            <td>$@item.Precio</td>
                            <td>@item.HoraI - @item.HoraF</td>

                            <td>
                                <span class="badge @(item.Estatus == "disponible" ? "bg-success" : "bg-secondary")">
                                    @item.Estatus
                                </span>
                            </td>

                            <td class="text-center">
                                <div class="btn-group btn-group-sm">

                                    <!-- EDITAR -->
                                    <button class="btn btn-outline-primary"
                                            onclick='editarServicio(
                                            @item.Idservicio,
                                            @Html.Raw(Json.Serialize(item.NombreServicio)),
                                            @item.Precio,
                                            "@item.HoraI",
                                            "@item.HoraF",
                                            "@item.Estatus")'>
                                        <i class="bi bi-pencil-square"></i>
                                    </button>

                                    @if (item.Estatus == "disponible")
                                    {
                                        <button class="btn btn-outline-danger"
                                                onclick="confirmarDesactivar(@item.Idservicio)">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-outline-success"
                                                onclick="confirmarActivar(@item.Idservicio)">
                                            <i class="bi bi-check-circle"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
<div class="modal fade" id="modalServicio" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow">

            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="Idservicio" id="editId" />
                <input type="hidden" name="Estatus" id="editEstatus" />

                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-pencil-square"></i> Editar servicio
                    </h5>
                    <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Nombre</label>
                        <input id="editNombre" name="NombreServicio" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Precio</label>
                        <input id="editPrecio" name="Precio" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Hora inicio</label>
                        <input type="time" id="editHoraI" name="HoraI" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Hora fin</label>
                        <input type="time" id="editHoraF" name="HoraF" class="form-control" />
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar cambios
                    </button>
                </div>
            

            </form>
        </div>
    </div>
</div>
<div class="mt-4 text-end">
    <a asp-controller="Farmaceuticoes"
       asp-action="Index"
       class="btn btn-outline-secondary rounded-pill px-4">
        <i class="bi bi-arrow-left"></i> Volver al módulo
    </a>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
       function editarServicio(id, nombre, precio, horaI, horaF, estatus) {
        document.getElementById("editId").value = id;
        document.getElementById("editNombre").value = nombre;
        document.getElementById("editPrecio").value = precio;
        document.getElementById("editHoraI").value = horaI;
        document.getElementById("editHoraF").value = horaF;
        document.getElementById("editEstatus").value = estatus;

        new bootstrap.Modal(document.getElementById("modalServicio")).show();
    }
    Swal.fire({
            icon: 'success',
            title: 'Servicio actualizado',
            text: 'Los cambios se guardaron correctamente',
            timer: 2000,
            showConfirmButton: false
    });
    function confirmarDesactivar(id) {
        Swal.fire({
            title: '¿Desactivar servicio?',
            text: 'El servicio quedará inactivo',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545',
            cancelButtonText: 'Cancelar',
            confirmButtonText: 'Sí, desactivar'
        }).then((result) => {
            if (result.isConfirmed) {
                fetch(`/Servicios/Desactivar/${id}`, {
                    method: 'POST'
                }).then(() => location.reload());
            }
        });
    }

    function confirmarActivar(id) {
        Swal.fire({
            title: '¿Activar servicio?',
            text: 'El servicio quedará disponible',
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#198754',
            cancelButtonText: 'Cancelar',
            confirmButtonText: 'Sí, activar'
        }).then((result) => {
            if (result.isConfirmed) {
                fetch(`/Servicios/Activar/${id}`, {
                    method: 'POST'
                }).then(() => location.reload());
            }
        });
    }
</script>

