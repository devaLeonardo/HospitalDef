@model IEnumerable<HospitalDef.Models.Servicio>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreServicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreServicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Idservicio">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Idservicio">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Idservicio">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
