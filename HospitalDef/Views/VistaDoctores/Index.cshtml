@model IEnumerable<HospitalDef.Models.VistaDoctor>

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container mt-4">

    <!-- ===== Encabezado ===== -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">
            <i class="fas fa-user-md me-2"></i> Lista de Doctores
        </h2>

        <!-- ===== Filtro ===== -->
        <div class="input-group w-50">
            <span class="input-group-text bg-white">
                <i class="fas fa-search text-secondary"></i>
            </span>
            <input type="text"
                   id="filtroDoctor"
                   class="form-control"
                   placeholder="Buscar doctor por nombre..."
                   onkeyup="filtrarDoctores()" />
        </div>
    </div>

    <!-- ===== Tarjeta ===== -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body">

            <div class="table-responsive">
                <table class="table align-middle table-hover" id="tablaDoctores">
                    <thead class="table-light">
                        <tr>
                            <th>Doctor</th>
                            <th>Especialidad</th>
                            <th>Usuario</th>
                            <th>Consultorio</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var d in Model)
                        {
                            <tr>
                                <!-- ===== Nombre ===== -->
                                <td data-nombre="@d.NombreCompleto">
                                    <strong>@d.NombreCompleto</strong>
                                </td>

                                <!-- ===== Especialidad ===== -->
                                <td>
                                    <span class="badge bg-info text-dark">
                                        @d.Especialidad
                                    </span>
                                </td>

                                <!-- ===== Usuario ===== -->
                                <td>@d.Usuario</td>

                                <!-- ===== Consultorio ===== -->
                                <td>
                                    <i class="fas fa-door-open me-1 text-secondary"></i>
                                    @d.Consultorio
                                </td>

                                <!-- ===== Estado ===== -->
                                <td>
                                    @if (d.Activo == true)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle me-1"></i> Activo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times-circle me-1"></i> Inactivo
                                        </span>
                                    }
                                </td>

                                <!-- ===== Acciones ===== -->
                                <td class="text-center">
                                    <a asp-controller="Doctors"
                                       asp-action="Edit"
                                       asp-route-id="@d.IdDoctor"
                                       class="btn btn-outline-warning btn-sm me-1"
                                       title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    @if (d.Activo == true)
                                    {
                                        <form asp-controller="Doctors"
                                              asp-action="Desactivar"
                                              asp-route-id="@d.IdDoctor"
                                              method="post"
                                              class="d-inline form-desactivar">

                                            @Html.AntiForgeryToken()

                                            <button type="button"
                                                    class="btn btn-outline-danger btn-sm btn-desactivar"
                                                    data-nombre="@d.NombreCompleto">
                                                <i class="fas fa-user-slash"></i>
                                            </button>
                                        </form>
                                    }

                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <div class="card-footer bg-white p-4 border-0 d-flex justify-content-between">
                <a asp-controller="Recepcionistums" asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">
                    <i class="fas fa-arrow-left me-2"></i>Volver al Modulo
                </a>

            </div>

        </div>
    </div>

</div>

<!-- ===== Script del filtro ===== -->
<script>
    function filtrarDoctores() {
        let input = document.getElementById("filtroDoctor");
        let filtro = input.value.toLowerCase();
        let filas = document.querySelectorAll("#tablaDoctores tbody tr");

        filas.forEach(fila => {
            let nombre = fila.querySelector("td[data-nombre]")
                .getAttribute("data-nombre")
                .toLowerCase();

            fila.style.display = nombre.includes(filtro) ? "" : "none";
        });
    }
</script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.querySelectorAll('.btn-desactivar').forEach(boton => {
        boton.addEventListener('click', function () {

            const form = this.closest('form');
            const nombre = this.getAttribute('data-nombre');

            Swal.fire({
                title: '¿Desactivar doctor?',
                html: `El doctor <strong>${nombre}</strong> será desactivado.<br><br>
                       <span class="text-danger">Esta acción puede revertirse.</span>`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '<i class="fas fa-user-slash"></i> Sí, desactivar',
                cancelButtonText: 'Cancelar',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        });
    });
</script>
@if (TempData["DoctorDesactivado"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Doctor desactivado',
            text: 'El doctor fue desactivado correctamente.',
            timer: 2500,
            showConfirmButton: false
        });
    </script>
}
@if (TempData["DoctorNoDesactivado"] != null)
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        Swal.fire({
            icon: 'warning',
            title: 'No se puede desactivar',
            text: 'El doctor tiene citas pendientes y no puede ser desactivado.',
            confirmButtonColor: '#d33'
        });
    </script>
}

@if (TempData["DoctorEditado"] != null)
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        Swal.fire({
            icon: 'success',
            title: '¡Cambios guardados!',
            text: 'La información del doctor se actualizó correctamente.',
            showConfirmButton: false,
            timer: 2000,
            timerProgressBar: true
        });
    </script>
}



