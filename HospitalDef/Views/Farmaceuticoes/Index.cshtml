@model HospitalDef.Models.Farmaceutico

@{
    ViewData["Title"] = "Perfil de Farmacéutico";
}

<link rel="stylesheet" href="~/css/doctorIndex.css" />

<div class="dashboard-container">

    <!-- SIDEBAR -->
    <div class="sidebar-modern d-flex flex-column flex-shrink-0 p-3 text-white shadow-lg">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none animate__animated animate__fadeInLeft animate__faster">
            <div class="icon-brand bg-white text-primary rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                <i class="bi bi-hospital-fill fs-5"></i>
            </div>
            <span class="fs-4 fw-bold">Panel</span>
        </a>

        <hr class="border-white opacity-25">

        <ul class="nav nav-pills flex-column mb-auto gap-2">
            <li class="nav-item animate__animated animate__fadeInLeft animate__faster" style="animation-delay: 0.1s">
                <a asp-controller="Medicamentoes" asp-action="Index" class="nav-link-custom d-flex align-items-center gap-3">
                    <i class="bi bi-capsule fs-5"></i>
                    <span>Inventario Meds</span>
                </a>
            </li>

            <li class="nav-item animate__animated animate__fadeInLeft animate__faster" style="animation-delay: 0.2s">
                <a asp-controller="Servicios" asp-action="Index" class="nav-link-custom d-flex align-items-center gap-3">
                    <i class="bi bi-lungs fs-5"></i>
                    <span>Servicios</span>
                </a>
            </li>

            <li class="nav-item animate__animated animate__fadeInLeft animate__faster" style="animation-delay: 0.3s">
                <a asp-controller="Tickets" asp-action="Index" class="nav-link-custom d-flex align-items-center gap-3">
                    <i class="bi bi-cash-coin fs-5"></i>
                    <span>Caja / Cobrar</span>
                </a>
            </li>

            <li class="nav-item mt-3 pt-3 border-top border-white border-opacity-10 animate__animated animate__fadeInLeft animate__faster" style="animation-delay: 0.4s">
                <a asp-controller="Empleadoes" asp-action="DatosPersonalesFar" class="nav-link-custom d-flex align-items-center gap-3">
                    <i class="bi bi-person-vcard fs-5"></i>
                    <span>Mi Perfil</span>
                </a>
            </li>
        </ul>

        <div class="mt-auto pt-4 text-center opacity-50 small">
            <p>© 2026 Hospital System</p>
        </div>
    </div>

    <!-- CONTENIDO -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">

                <div class="card border-0 shadow-lg rounded-3 overflow-hidden">

                    <!-- HEADER -->
                    <div class="card-header bg-primary text-white p-4 d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 fw-bold">
                            <i class="fas fa-pills me-2"></i>Ficha Técnica
                        </h4>
                        <span class="badge bg-white text-primary">Activo</span>
                    </div>

                    <!-- BODY -->
                    <div class="card-body p-5 bg-light">

                        <div class="text-center mb-5">
                            <div class="bg-white rounded-circle shadow-sm d-inline-flex p-4 mb-3 align-items-center justify-content-center"
                                 style="width: 120px; height: 120px;">
                                <i class="fas fa-user-nurse fa-4x text-primary"></i>
                            </div>

                            <h2 class="fw-bold text-dark mb-1">
                                @Model.IdEmpleadoNavigation.Nombre
                                @Model.IdEmpleadoNavigation.ApellidoP
                                @Model.IdEmpleadoNavigation.ApellidoM
                            </h2>

                            <div class="mt-2">
                                <span class="badge bg-secondary fs-6 px-4 py-2 rounded-pill shadow-sm">
                                    <i class="fas fa-capsules me-2"></i>Farmacéutico
                                </span>
                            </div>
                        </div>

                        <hr class="text-muted opacity-25 mb-4">

                        <div class="row g-4">

                            <!-- RFC -->
                            <div class="col-md-6">
                                <div class="p-4 bg-white rounded-3 shadow-sm border-start border-4 border-primary h-100">
                                    <h6 class="text-muted fw-bold text-uppercase small">RFC</h6>
                                    <p class="fs-5 fw-bold mb-0 text-dark font-monospace">
                                        @Model.IdEmpleadoNavigation.Rfc
                                    </p>
                                </div>
                            </div>

                            <!-- HORARIO -->
                            <div class="col-md-6">
                                <div class="p-4 bg-white rounded-3 shadow-sm border-start border-4 border-success h-100">
                                    <h6 class="text-muted fw-bold text-uppercase small">Horario</h6>

                                    <p class="mb-1 fw-bold text-dark">
                                        Entrada:
                                        @Model.IdEmpleadoNavigation.IdHorarioNavigation.HoraEntrada
                                    </p>

                                    <p class="mb-1 fw-bold text-dark">
                                        Salida:
                                        @Model.IdEmpleadoNavigation.IdHorarioNavigation.HoraSalida
                                    </p>

                                    <p class="mb-0 text-dark">
                                        Días:
                                        @Model.IdEmpleadoNavigation.IdHorarioNavigation.Dias
                                    </p>
                                </div>
                            </div>

                            <!-- DIRECCIÓN -->
                            <div class="col-md-12">
                                <div class="p-4 bg-white rounded-3 shadow-sm border-start border-4 border-warning h-100">
                                    <h6 class="text-muted fw-bold text-uppercase small">Dirección</h6>
                                    <p class="mb-0 text-dark">
                                        @Model.IdEmpleadoNavigation.Calle,
                                        @Model.IdEmpleadoNavigation.Colonia,
                                        @Model.IdEmpleadoNavigation.Municipio,
                                        @Model.IdEmpleadoNavigation.Estado
                                    </p>
                                </div>
                            </div>
