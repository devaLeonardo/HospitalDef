@model IEnumerable<HospitalDef.Models.Farmaceutico>

@{
    ViewData["Title"] = "Index";
}


<link rel="stylesheet" href="~/css/doctorIndex.css" />

<div class="dashboard-container">

    <!-- ===== Sidebar  -->
    <div class="sidebar">
        <h2 class="menu-title">Menú</h2>



        <a class="menu-btn" asp-controller="Farmaceuticoes" asp-action="Create">
            <i class="far fa-calendar-plus me-2"></i> Atender receta
        </a>


        <a class="menu-btn" asp-controller="Farmaceuticoes" asp-action="Details" asp-route-id="1">
            <i class="far fa-calendar-plus me-2"></i> Inventario
        </a>

        <a class="menu-btn" asp-controller="Empleadoes" asp-action="DatosPersonalesRecep">
            <i class="fas fa-user-circle me-2"></i> Datos Personales
        </a>
    </div>

    <!-- ===== Contenido central ===== -->
    <div class="main-content">
        <h1 class="welcome-title">
            Bienvenido(a),
            <span class="user-name">@User.Identity?.Name</span>
        </h1>

        <p class="welcome-subtitle">
            Selecciona una opción del menú para comenzar.
        </p>
    </div>

</div>