@model IEnumerable<HospitalDef.Models.Empleado>

<div class="container mt-4">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-people-fill"></i> Empleados
        </h2>

        <!-- BUSCADOR -->
        <input type="text"
               id="buscador"
               class="form-control w-25"
               placeholder="Buscar por nombre o rol...">
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-body">

            <table class="table table-hover align-middle" id="tablaEmpleados">
                <thead class="table-light">
                    <tr>
                        <th>Empleado</th>
                        <th>Rol</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var empleado in Model)
                    {
                        <tr>
                            <td>
                                <strong>
                                    @empleado.Nombre @empleado.ApellidoP @empleado.ApellidoM
                                </strong>
                            </td>

                            <!-- ROL -->
                            <td>
                                @if (empleado.Farmaceutico != null)
                                {
                                    <span class="badge bg-success">Farmacéutico</span>
                                }
                                @if (empleado.Recepcionista != null)
                                {
                                    <span class="badge bg-info text-dark">Recepcionista</span>
                                }
                            </td>

                        <!-- ESTADO -->
                            <td>
                                @if (empleado.Activo== true)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check-circle me-1"></i> Activo
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">
                                        <i class="fas fa-times-circle me-1"></i> Inactivo
                                    </span>
                                }
                            </td>
                            <!-- ACCIONES -->
                            <td>
                                <a asp-action="Edit"
                                   asp-route-id="@empleado.IdEmpleado"
                                   class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            </td>
                        </tr>
                                        }
                </tbody>
            </table>

        </div>
    </div>
</div>
<script>
    document.getElementById("buscador").addEventListener("keyup", function () {
        let filtro = this.value.toLowerCase();
        let filas = document.querySelectorAll("#tablaEmpleados tbody tr");

        filas.forEach(fila => {
            let texto = fila.innerText.toLowerCase();
            fila.style.display = texto.includes(filtro) ? "" : "none";
        });
    });
</script>
