@model HospitalDef.Models.Empleado

@{
    ViewData["Title"] = "Expediente del Empleado";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="card border-0 shadow-lg overflow-hidden rounded-3">

                <div class="card-header bg-dark text-white p-4 border-0">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <div class="bg-white rounded-circle p-3 me-4 text-dark shadow-sm">
                                <i class="fas fa-user-tie fa-3x"></i>
                            </div>
                            <div>
                                <h6 class="text-uppercase text-white-50 mb-1 tracking-wide">Expediente Digital</h6>
                                <h2 class="fw-bold mb-0">
                                    @Html.DisplayFor(model => model.Nombre)
                                    @Html.DisplayFor(model => model.ApellidoP)
                                    @Html.DisplayFor(model => model.ApellidoM)
                                </h2>
                            </div>
                        </div>

                        <div class="mt-3 mt-md-0">
                            @if (Model.Activo == true)
                            {
                                <span class="badge bg-success fs-6 px-4 py-2 rounded-pill shadow-sm">
                                    <i class="fas fa-check-circle me-2"></i>Activo
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger fs-6 px-4 py-2 rounded-pill shadow-sm">
                                    <i class="fas fa-times-circle me-2"></i>Inactivo
                                </span>
                            }
                        </div>
                    </div>
                </div>

                <div class="card-body p-4 bg-light">
                    <div class="row g-4">

                        <div class="col-md-6">
                            <div class="bg-white p-4 rounded-3 shadow-sm h-100 border-top border-4 border-info">
                                <h5 class="fw-bold text-info mb-4"><i class="far fa-id-card me-2"></i>Información Personal</h5>

                                <div class="row g-3 mb-4">
                                    <div class="col-6">
                                        <small class="text-muted d-block fw-bold text-uppercase">Fecha Nacimiento</small>
                                        <span class="fs-5">@Html.DisplayFor(model => model.FechaNacimiento)</span>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted d-block fw-bold text-uppercase">Edad</small>
                                        <span class="fs-5">@Html.DisplayFor(model => model.Edad) años</span>
                                    </div>
                                    <div class="col-12">
                                        <small class="text-muted d-block fw-bold text-uppercase">Sexo</small>
                                        
                                        <span>@Html.DisplayFor(model => model.Sexo)</span>
                                    </div>
                                </div>

                                <hr class="text-muted opacity-25">

                                <h5 class="fw-bold text-secondary mb-3 mt-4"><i class="fas fa-map-marker-alt me-2"></i>Domicilio</h5>
                                <div class="d-flex align-items-start">
                                    <i class="fas fa-home text-muted mt-1 me-3"></i>
                                    <div>
                                        <p class="mb-1 fw-bold">@Html.DisplayFor(model => model.Calle)</p>
                                        <p class="mb-1 text-muted">Col. @Html.DisplayFor(model => model.Colonia)</p>
                                        <p class="mb-0 text-muted">
                                            @Html.DisplayFor(model => model.Municipio), @Html.DisplayFor(model => model.Estado)
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="bg-white p-4 rounded-3 shadow-sm h-100 border-top border-4 border-warning">
                                <h5 class="fw-bold text-warning text-dark-emphasis mb-4"><i class="fas fa-briefcase me-2"></i>Datos Laborales</h5>

                                <div class="mb-3">
                                    <div class="d-flex justify-content-between align-items-center bg-light p-3 rounded">
                                        <div>
                                            <small class="text-muted d-block fw-bold">RFC</small>
                                            <span class="font-monospace fs-5 text-dark">@Html.DisplayFor(model => model.Rfc)</span>
                                        </div>
                                        <i class="fas fa-barcode fa-2x text-muted opacity-25"></i>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <div class="d-flex justify-content-between align-items-center bg-light p-3 rounded">
                                        <div>
                                            <small class="text-muted d-block fw-bold">Cuenta Bancaria (Nómina)</small>
                                            <span class="font-monospace fs-5 text-dark">@Html.DisplayFor(model => model.CuentaBancaria)</span>
                                        </div>
                                        <i class="fas fa-university fa-2x text-muted opacity-25"></i>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <div class="d-flex justify-content-between align-items-center bg-light p-3 rounded">
                                        <div>
                                            <div class="border rounded p-2 text-center align-items-center">
                                                <small class="text-muted d-block">Horario</small>
                                                <span class="fw-bold text-primary">@Html.DisplayFor(model => model.IdHorarioNavigation.Dias)</span>
                                            </div>

                                            <div class="border rounded p-2 text-center align-items-center">
                                                
                                                <span class="fw-bold text-primary">#@Html.DisplayFor(model => model.IdHorarioNavigation.HoraEntrada)</span>
                                                <span class="fw-bold text-primary">#@Html.DisplayFor(model => model.IdHorarioNavigation.HoraSalida)</span>

                                            </div>
                                            
                                        </div>
                                        <i class="fas fa-university fa-2x text-muted opacity-25"></i>
                                    </div>
                                </div>

           
                                    
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="card-footer bg-white p-4 border-0 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">
                        <i class="fas fa-arrow-left me-2"></i>Volver al Modulo
                    </a>

                </div>

            </div>
        </div>
    </div>
</div>