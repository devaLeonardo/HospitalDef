@model IEnumerable<HospitalDef.Models.Consultorio>

@{
    ViewData["Title"] = "Consultorios";
}

<h2 class="mb-4 text-primary">Listado de Consultorios</h2>

<div class="table-responsive">
    <table class="table table-hover table-bordered align-middle">
        <thead class="table-dark text-center">
            <tr>
                <th>Dirección</th>
                <th>Edificio</th>
                <th>Planta</th>
                <th>Consultorio</th>
            </tr>
        </thead>

        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-semibold">
                            🏥 Edificio @item.Edificio · Planta @item.Planta · Consultorio @item.Numero
                        </td>
                        <td class="text-center">
                            @item.Edificio
                        </td>
                        <td class="text-center">
                            @item.Planta
                        </td>
                        <td class="text-center">
                            @item.Numero
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">
                        No hay consultorios registrados
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="d-flex justify-content-between mt-4">
    <a asp-controller="Recepcionistums" asp-action="Index" class="btn btn-outline-secondary">Volver a mi modulo</a>
</div>