<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Hospital</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="bg-light text-dark d-flex flex-column">

    <header class="site-header shadow-sm">
        @await RenderSectionAsync("Styles", required: false)

        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container">

                <a class="navbar-brand d-flex align-items-center gap-2" href="/">
                    <img src="~/images/logo.png" alt="Hospital" height="40" asp-append-version="true" />
                    <div class="d-none d-md-block">
                        <div class="brand-title">Hospital Municipal</div>
                        <small class="text-muted d-block">Cuidando tu salud</small>
                    </div>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto align-items-lg-center">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Contacto</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="nav-item d-flex align-items-center ms-lg-3 ps-lg-3 border-start border-secondary my-2 my-lg-0">


                                <span class="navbar-text text-primary fw-semibold me-3">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </span>

                                <a class="btn btn-outline-primary btn-sm" asp-controller="Pacientes" asp-action="Index">Tu Modulo</a>



                                @*
                                <form asp-controller="Acceso" asp-action="Logout" method="post">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                                    </button>
                                </form>*@
                            </div>

                            
                        }
                        else
                        {
                            <li class="nav-item ms-2">
                                <a class="btn btn-outline-primary btn-sm"
                                   asp-controller="Acceso"
                                   asp-action="Login">
                                    Iniciar Sesión
                                </a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container-fluid my-4 flex-grow-1">
        @RenderBody()
    </main>

    <footer class="bg-white border-top py-4">
        <div class="container">
            <div class="row">

                <div class="col-md-6 small text-muted">
                    © @DateTime.Now.Year Hospital Municipal — Dirección: Av. Ejemplo 123
                </div>

                <div class="col-md-6 text-md-end">
                    <a class="text-muted me-3" href="/Aviso">Aviso legal</a>
                    <a class="text-muted" href="/Privacidad">Privacidad</a>
                </div>

            </div>
        </div>
    </footer>

    <!-- Scripts Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
