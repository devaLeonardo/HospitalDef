@model HospitalDef.Models.Doctor

@{
    ViewData["Title"] = "Editar Doctor";
}

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container mt-4">

    <div class="card shadow-lg border-0 rounded-4">

        <!-- ===== HEADER ===== -->
        <div class="card-header bg-primary text-white rounded-top-4">
            <h4 class="mb-0">
                <i class="fas fa-user-md me-2"></i>
                Editar información del Doctor
            </h4>
        </div>

        <div class="card-body px-4 py-4">

            <form asp-action="Edit" method="post">


                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="IdDoctor" />
                <input type="hidden" asp-for="IdEmpleado" />

                <input type="hidden" asp-for="IdEmpleadoNavigation.IdEmpleado" />
                <input type="hidden" asp-for="IdEmpleadoNavigation.IdUsuario" />
                <input type="hidden" asp-for="IdEmpleadoNavigation.Activo" />


                <!-- ================= DATOS PERSONALES ================= -->
                <h5 class="text-secondary mb-3">
                    <i class="fas fa-id-card me-2"></i> Datos del Empleado
                </h5>

                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Nombre</label>
                        <input asp-for="IdEmpleadoNavigation.Nombre" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Apellido Paterno</label>
                        <input asp-for="IdEmpleadoNavigation.ApellidoP" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Apellido Materno</label>
                        <input asp-for="IdEmpleadoNavigation.ApellidoM" class="form-control" />
                    </div>
                </div>

                <div class="row g-3 mt-2">
                    <div class="col-md-4">
                        <label class="form-label">RFC</label>
                        <input asp-for="IdEmpleadoNavigation.Rfc" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Cuenta Bancaria</label>
                        <input asp-for="IdEmpleadoNavigation.CuentaBancaria" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Sexo</label>
                        <select asp-for="IdEmpleadoNavigation.Sexo" class="form-select">
                            <option value="M">Masculino</option>
                            <option value="F">Femenino</option>
                        </select>
                    </div>
                </div>

                <hr class="my-4" />

                <!-- ================= HORARIO ================= -->
                <h5 class="text-secondary mb-3">
                    <i class="fas fa-clock me-2"></i> Horario del Doctor
                </h5>

                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label">Horario</label>
                        <select asp-for="IdEmpleadoNavigation.IdHorario"
                                asp-items="ViewBag.IdHorario"
                                class="form-select">
                        </select>
                    </div>
                </div>

                <hr class="my-4" />

                <!-- ================= DATOS PROFESIONALES ================= -->
                <h5 class="text-secondary mb-3">
                    <i class="fas fa-briefcase-medical me-2"></i> Información Profesional
                </h5>

                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Especialidad</label>
                        <select asp-for="IdEspecialidad"
                                asp-items="ViewBag.IdEspecialidad"
                                class="form-select">
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Consultorio</label>
                        <select asp-for="IdConsultorio"
                                asp-items="ViewBag.IdConsultorio"
                                class="form-select">
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Cédula Profesional</label>
                        <input asp-for="CedulaProf" class="form-control" />
                    </div>
                </div>

                <hr class="my-4" />

                <!-- ================= BOTONES ================= -->
                <div class="d-flex justify-content-end gap-2">
                    <a asp-controller="vistaDoctores"
                       asp-action="Index"
                       class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Volver
                    </a>

                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-1"></i> Guardar cambios
                    </button>
                </div>

            </form>

        </div>
    </div>

</div>

