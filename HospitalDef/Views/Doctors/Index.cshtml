
@model HospitalDef.Models.Doctor

@{
    ViewData["Title"] = "Perfil del Médico";
}
<link rel="stylesheet" href="~/css/doctorIndex.css" />


<div class="dashboard-container">

    <div class="sidebar-modern d-flex flex-column flex-shrink-0 p-3 text-white shadow-lg">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none animate__animated animate__fadeInLeft animate__faster">
            <div class="icon-brand bg-white text-primary rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                <i class="bi bi-heart-pulse-fill fs-5"></i>
            </div>
            <span class="fs-4 fw-bold">Panel Médico</span>
        </a>

        <hr class="border-white opacity-25">

        <ul class="nav nav-pills flex-column mb-auto gap-2">
            <li class="nav-item animate__animated animate__fadeInLeft animate__faster" style="animation-delay: 0.1s">
                <a asp-controller="Citas" asp-action="Index" class="nav-link-custom d-flex align-items-center gap-3">
                    <i class="bi bi-calendar-check fs-5"></i>
                    <span>Citas Pendientes</span>
                </a>
            </li>

            <li class="nav-item animate__animated animate__fadeInLeft animate__faster" style="animation-delay: 0.2s">
                <a asp-controller="HistorialMedicoPacienteVM" asp-action="Index" class="nav-link-custom d-flex align-items-center gap-3">
                    <i class="bi bi-people-fill fs-5"></i>
                    <span>Pacientes</span>
                </a>
            </li>

            <li class="nav-item mt-3 pt-3 border-top border-white border-opacity-10 animate__animated animate__fadeInLeft animate__faster" style="animation-delay: 0.3s">
                <a asp-controller="Empleadoes" asp-action="DatosPersonalesDoctor" class="nav-link-custom d-flex align-items-center gap-3">
                    <i class="bi bi-person-vcard fs-5"></i>
                    <span>Mi Perfil</span>
                </a>
            </li>
        </ul>

        <div class="mt-auto pt-4 text-center opacity-50 small">
            <p>© 2026 Hospital System</p>
        </div>
    </div>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-0 shadow-lg rounded-3 overflow-hidden">

                    <div class="card-header bg-primary text-white p-4 d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 fw-bold"><i class="fas fa-id-badge me-2"></i>Ficha Técnica</h4>
                        <span class="badge bg-white text-primary">Activo</span>
                    </div>

                    <div class="card-body p-5 bg-light">
                        <div class="text-center mb-5">
                            <div class="bg-white rounded-circle shadow-sm d-inline-flex p-4 mb-3 align-items-center justify-content-center" style="width: 120px; height: 120px;">
                                <i class="fas fa-user-md fa-4x text-primary"></i>
                            </div>

                            <h2 class="fw-bold text-dark mb-1">
                                Dr. @Html.DisplayFor(model => model.IdEmpleadoNavigation.Nombre)
                                @Html.DisplayFor(model => model.IdEmpleadoNavigation.ApellidoP)
                                @Html.DisplayFor(model => model.IdEmpleadoNavigation.ApellidoM)
                            </h2>

                            <div class="mt-2">
                                <span class="badge bg-info text-dark fs-6 px-4 py-2 rounded-pill shadow-sm">
                                    <i class="fas fa-stethoscope me-2"></i>@Html.DisplayFor(model => model.IdEspecialidadNavigation.Especialidades)
                                </span>
                            </div>
                        </div>

                        <hr class="text-muted opacity-25 mb-4">

                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="p-4 bg-white rounded-3 shadow-sm border-start border-4 border-primary h-100 position-relative overflow-hidden">
                                    <div class="position-absolute end-0 top-0 p-3 opacity-10">
                                        <i class="fas fa-certificate fa-3x text-primary"></i>
                                    </div>
                                    <div class="d-flex align-items-center mb-2">
                                        <h6 class="text-muted fw-bold mb-0 text-uppercase tracking-wide small">Cédula Profesional</h6>
                                    </div>
                                    <p class="fs-4 fw-bold mb-0 text-dark font-monospace">
                                        @Html.DisplayFor(model => model.CedulaProf)
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="p-4 bg-white rounded-3 shadow-sm border-start border-4 border-primary h-100">
                                    <h6 class="text-muted fw-bold text-uppercase small">
                                        Horario
                                    </h6>

                                    <p class="mb-1 fw-bold text-dark">
                                        Entrada:
                                        @Model.IdEmpleadoNavigation?.IdHorarioNavigation?.HoraEntrada
                                    </p>

                                    <p class="mb-1 fw-bold text-dark">
                                        Salida:
                                        @Model.IdEmpleadoNavigation?.IdHorarioNavigation?.HoraSalida
                                    </p>

                                    <p class="mb-0 text-dark">
                                        Días:
                                        @Model.IdEmpleadoNavigation?.IdHorarioNavigation?.Dias
                                    </p>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="p-4 bg-white rounded-3 shadow-sm border-start border-4 border-success h-100 position-relative overflow-hidden">
                                    <div class="position-absolute end-0 top-0 p-3 opacity-10">
                                        <i class="fas fa-door-open fa-3x text-success"></i>
                                    </div>
                                    <div class="d-flex align-items-center mb-2">
                                        <h6 class="text-muted fw-bold mb-0 text-uppercase tracking-wide small">Consultorio Asignado</h6>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <span class="fs-4 fw-bold text-dark me-2"># @Html.DisplayFor(model => model.IdConsultorioNavigation.Numero)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    
                </div>
            </div>
        </div>
    </div>
