@{
    ViewData["Title"] = "Perfil del Paciente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/doctorIndex.css" />

<div class="dashboard-container">

    <!-- SIDEBAR -->
    <div class="sidebar">
        <h2 class="menu-title">Menú</h2>

        <a class="menu-btn active" asp-controller="Home" asp-action="Index">
            Inicio
        </a>

        <a class="menu-btn" asp-controller="Citas" asp-action="Create">
            Agendar cita
        </a>

        <a class="menu-btn" asp-controller="Citas" asp-action="Index">
            Mis citas
        </a>

        <a class="menu-btn" asp-controller="HistorialMedicoPacientes" asp-action="Details">
            Datos personales
        </a>
    </div>

    <!-- CONTENIDO -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">

                @if (User.Identity.IsAuthenticated)
                {
                    var nombre = User.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value;

                    <div class="alert alert-info shadow-sm">
                        <h4 class="alert-heading">¡Hola, @nombre!</h4>
                        <p>
                            Usa el menú de la izquierda para gestionar tus citas
                            y tus datos personales.
                        </p>
                    </div>
                }

                <div class="card border-0 shadow-lg rounded-3 overflow-hidden">
                    <div class="card-header bg-primary text-white p-4">
                        <h4 class="mb-0 fw-bold">
                            <i class="fas fa-user-injured me-2"></i>
                            Panel del Paciente
                        </h4>
                    </div>

                    <div class="card-body p-5 bg-light">
                        <p class="lead">
                            Bienvenido al módulo de pacientes.
                            Selecciona una opción del menú lateral.
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>
